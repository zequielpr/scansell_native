<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.sales.admin.account.name.ChangeNameFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/changeNameToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:title="@string/change_name"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/window_top_side"
        android:layout_marginBottom="@dimen/window_bottom_side"
        android:layout_marginEnd="@dimen/window_end_side"
        android:layout_marginStart="@dimen/window_start_side"
        android:layout_below="@id/changeNameToolbar">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameFilledTextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_new_name">

            <!--this is the actual edit text which takes the input-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="30" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/newNameWarnTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameFilledTextField"
            android:layout_marginTop="@dimen/warn_top_side"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newNameWarnTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/window_top_side"
            android:text="Save" />
    </RelativeLayout>

</RelativeLayout>