<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:id="@+id/content_toolbar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/create_business_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/businesses_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/businesses_title"
            android:textSize="25sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_alignEnd="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="10sp"
            android:background="@android:color/transparent"
            android:text="@string/delete"
            android:tooltipText="@string/delete"
            android:drawableTop="@drawable/baseline_delete_24"
            />

        <Button
            android:id="@+id/cancel_deleting_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="10sp"
            android:background="@android:color/transparent"
            android:text="@string/cancel"
            android:tooltipText="@string/cancel"
            android:drawableTop="@drawable/cancel_24"
            />



        <Button
            android:id="@+id/add_business_button"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="10sp"
            android:background="@android:color/transparent"
            android:text="@string/add"
            android:tooltipText="@string/add"
            android:drawableTop="@drawable/baseline_add_24"
            />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/select_all_button"
            android:visibility="gone"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/unchked_circle"
            android:text="@string/all"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:tooltipText="@string/all" />

        <TextView
            android:id="@+id/textViewSelecetedBusinesses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/cancel_deleting_button"
            android:text="0 selcted"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>