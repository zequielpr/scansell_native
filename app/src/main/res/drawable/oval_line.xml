<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/oval_line.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Oval at the start of the line -->
    <item android:top="0dp" android:left="0dp" android:right="8dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#000000" /> <!-- Fill color of the oval -->
        </shape>
    </item>
    <!-- Line -->
    <item android:top="0dp" android:left="4dp" android:right="4dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Fill color of the line -->
        </shape>
    </item>
    <!-- Oval at the end of the line -->
    <item android:top="0dp" android:left="8dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#000000" /> <!-- Fill color of the oval -->
        </shape>
    </item>
</layer-list>